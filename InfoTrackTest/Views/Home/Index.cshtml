
@model InfoTrackTest.Models.SearchFormModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">InfoTrack Search Scraper</h1>
    @using (Html.BeginForm("ExecuteSeach", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Check your SEO</th>
            </tr>
            <tr>
                <td>Your website: </td>
                <td>
                    @Html.TextBoxFor(m => m.TargetURL, new { Value = "www.infotrack.co.uk" })
                </td>
            </tr>
            <tr>
                <td>Search Terms: </td>
                <td>
                    @Html.TextBoxFor(m => m.SearchTerms, new { Value = "land registry search" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
    <div>
        @ViewBag.SearchResult
    </div>
</div>
